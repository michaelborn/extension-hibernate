<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.lucee</groupId>
  <artifactId>ortushibernate</artifactId>
  <packaging>bundle</packaging>
  <name>Ortus Hibernate Extension</name>
  <version>5.4.29.20-BETA</version>
  <description>Lucee Extension for Hibernate ORM Engine.</description>
  <url>http://maven.lucee.org/extension/hibernate</url>
  <developers>
    <developer>
      <id>micstriit</id>
      <name>Michael Offner</name>
      <email>michael@lucee.org</email>
      <organization>Lucee Association Switzerland</organization>
      <organizationUrl>http://lucee.org</organizationUrl>
      <roles>
        <role>Project-Administrator</role>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The GNU Lesser General Public License, Version 2.1</name>
      <url>http://www.gnu.org/licenses/lgpl-2.1.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/michaelborn/extension-hibernate.git</connection>
    <developerConnection>scm:git:git@github.com:michaelborn/extension-hibernate.git</developerConnection>
    <tag>${project.version}</tag>
    <url>https://github.com/michaelborn/extension-hibernate</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <extensions>true</extensions>
        <configuration>
          <excludes>
            <exclude>.*</exclude>
          </excludes>
          <archive>
            <manifestFile>src/main/java/META-INF/MANIFEST.MF</manifestFile>
            <manifestEntries>
              <mainClass>${class}</mainClass>
              <id>${id}</id>
              <name>${name}</name>
              <startBundles>false</startBundles>
              <builtDate>${NOW}</builtDate>
              <version>${project.version}</version>
              <releaseType>${releaseType}</releaseType>
              <class>${class}</class>
              <description>${description}</description>
              <orm>[{'class':'${class}','name':'${bundlename}','version':'${project.version}'}]</orm>
              <lucee-core-version>${lucee.version}</lucee-core-version>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>5.1.8</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Name>${project.artifactId}</Bundle-Name>
            <Bundle-Version>1.0.0</Bundle-Version>
            <Private-Package>org.lucee.extension.orm.hibernate</Private-Package>
            <Import-Package>net.sf.ehcache.hibernate</Import-Package>
            <Export-Package>org.lucee.extension.orm.hibernate,org.lucee.extension.orm.hibernate.jdbc</Export-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <minimizeJar>true</minimizeJar>
          <artifactSet>
            <includes>
              <include>org.hibernate:*</include>
              <include>javax.servlet:*</include>
              <include>antlr:*</include>
              <include>org.dom4j:*</include>
              <include>org.javaassist:*</include>
              <include>jta:*</include>
              <include>w3c:dom:*</include>
              <include>org-apache-commons-collections:*</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.coderplus.maven.plugins</groupId>
        <artifactId>copy-rename-maven-plugin</artifactId>
        <version>1.0.1</version>
        <executions>
          <execution>
            <id>copy-file</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <sourceFile>${project.build.directory}/${project.build.finalName}.jar</sourceFile>
              <destinationFile>${project.build.directory}/${project.build.finalName}.lex</destinationFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>repo</id>
      <url>https://raw.githubusercontent.com/lucee/mvn/master/releases</url>
    </repository>
    <repository>
      <id>snapi</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.lucee</groupId>
      <artifactId>lucee</artifactId>
      <version>5.3.9.133</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
    <snapshotRepository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <name>Hibernate ORM Engine</name>
    <id>b0e494c1-2ff8-44d5-a89770af769e568c</id>
    <class>org.lucee.extension.orm.hibernate.HibernateORMEngine</class>
    <bundleversion>5.4.29.</bundleversion>
    <releaseType>server</releaseType>
    <hibernate.version>5.4.29.Final</hibernate.version>
    <bundlename>ortus.hibernate</bundlename>
    <jdk.version>1.7</jdk.version>
    <lucee.version>5.3.9.133</lucee.version>
    <description>Hibernate ORM (Hibernate in short) is an object-relational mapping library for the Java language,
 providing a framework for mapping an object-oriented domain model to a traditional relational database. 
 Hibernate solves object-relational impedance mismatch problems by replacing direct persistence-related 
 database accesses with high-level object handling functions.</description>
    <versionAppendix>-BETA</versionAppendix>
  </properties>
</project>
